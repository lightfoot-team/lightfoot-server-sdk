{
  "name": "lightfoot-server-sdk",
  "version": "1.0.0",
  "description": "Server SDK for Lightfoot, a feature flag management system with built-in observability using OpenFeature and OpenTelemetry integrations",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightfoot-team/lightfoot-server-sdk.git"
  },
  "keywords": [
    "lightfoot",
    "server",
    "sdk",
    "openfeature",
    "opentelemetry",
    "telemetry",
    "monitoring",
    "feature-flags",
    "observability"
  ],
  "author": "Alex Johnson, Allister Driscoll, Patrick Moran, Scott Venkataraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lightfoot-team/lightfoot-server-sdk/issues"
  },
  "homepage": "https://github.com/lightfoot-team/lightfoot-server-sdk#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@openfeature/open-telemetry-hooks": "^0.4.0",
    "@openfeature/server-sdk": "^1.18.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/context-async-hooks": "^2.0.1",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "axios": "^1.10.0",
    "express": "^5.1.0"
  }
}